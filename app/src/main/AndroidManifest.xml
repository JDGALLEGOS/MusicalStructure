<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.galpotechsolutions.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SpanishActivity"
            android:label="@string/category_spanish"/>
        <activity android:name=".EnglishActivity"
            android:label="@string/category_english"/>
        <activity android:name=".MovieActivity"
            android:label="@string/category_movies"/>
        <activity android:name=".songsActivity"
            android:label="@string/category_song"/>
        <activity android:name=".DetailActivity"
            android:label="@string/category_detail"/>

    </application>

</manifest>